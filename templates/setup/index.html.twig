{% extends 'base.html.twig' %}

{% block title %}Application Setup{% endblock %}

{% block stylesheets %}
<style>
    .setup-container {
        max-width: 800px;
        margin: 0 auto;
    }

    .setup-card {
        margin-bottom: 20px;
    }

    .setup-card .card-header {
        font-weight: bold;
    }

    .date-format-examples {
        margin-top: 15px;
        padding: 10px;
        background-color: #f8f9fa;
        border-radius: 5px;
    }

    .date-format-examples p {
        margin-bottom: 5px;
    }
</style>
{% endblock %}

{% block body %}
<div class="setup-container">
    <h1 class="mb-4">Application Setup</h1>

    <div class="card setup-card">
        <div class="card-header bg-primary text-white">
            Date Format Settings
        </div>
        <div class="card-body">
            <p class="card-text">
                Configure the date format that will be used throughout the application.
                This setting affects how dates are displayed to users.
            </p>

            {{ form_start(form) }}
                <div class="form-group">
                    {{ form_label(form.date_format) }}
                    {{ form_widget(form.date_format) }}
                    {{ form_errors(form.date_format) }}
                </div>

                <div class="date-format-examples">
                    <h5>Format Examples:</h5>
                    <p><strong>YYYY-MM-DD:</strong> {{ "now"|date("Y-m-d") }}</p>
                    <p><strong>MM/DD/YYYY:</strong> {{ "now"|date("m/d/Y") }}</p>
                    <p><strong>DD/MM/YYYY:</strong> {{ "now"|date("d/m/Y") }}</p>
                    <p><strong>DD.MM.YYYY:</strong> {{ "now"|date("d.m.Y") }}</p>
                    <p><strong>Month DD, YYYY:</strong> {{ "now"|date("F j, Y") }}</p>
                </div>

                <div class="mt-3">
                    {{ form_widget(form.save) }}
                </div>
            {{ form_end(form) }}
        </div>
    </div>

    <!-- Flash messages -->
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    {% for message in app.flashes('error') %}
        <div class="alert alert-danger">
            {{ message }}
        </div>
    {% endfor %}

    {% for message in app.flashes('form_error') %}
        <div class="alert alert-warning">
            {{ message }}
        </div>
    {% endfor %}
</div>
{% endblock %}
