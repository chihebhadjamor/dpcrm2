{% extends 'base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block stylesheets %}
<style>
    .row.dashboard-container {
        display: flex;
        flex-wrap: nowrap;
    }

    .dashboard-left-panel {
        width: 10%;
        border-right: 1px solid #ccc;
        padding-right: 15px;
    }

    .dashboard-right-panel {
        width: 90%;
        padding-left: 15px;
    }
</style>
{% endblock %}

{% block body %}
<div class="row mb-4 justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h1>Dashboard</h1>
            </div>
            <div class="card-body">
                <p>You are logged in as {{ app.user.userIdentifier }}</p>
            </div>
        </div>
    </div>
</div>

<div class="row dashboard-container">
    <!-- Left Panel with Navigation Links (Detached) -->
    <div class="dashboard-left-panel">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">Navigation</h4>
            </div>
            <div class="card-body">
                <div class="list-group">
                    <a href="{{ path('app_users') }}" class="list-group-item list-group-item-action list-group-item-primary">
                        <i class="fas fa-users"></i> Users Management
                    </a>
                    <a href="{{ path('app_accounts') }}" class="list-group-item list-group-item-action list-group-item-success">
                        <i class="fas fa-building"></i> Accounts Management
                    </a>
                </div>

                <div class="mt-4">
                    <a href="{{ path('app_logout') }}" class="btn btn-danger w-100">Logout</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Right Panel for Content Display (Detached) -->
    <div class="dashboard-right-panel">
        <div class="card">
            <div class="card-header bg-light">
                <h4>Dashboard</h4>
            </div>
            <div class="card-body">
                <p>Please select an option from the left panel to manage users or accounts.</p>
                <p>The selected content will be displayed here.</p>
            </div>
        </div>
    </div>
</div>
{% endblock %}
