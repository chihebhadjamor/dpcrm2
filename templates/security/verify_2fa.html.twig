{% extends 'base.html.twig' %}

{% block title %}Two-Factor Authentication{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card mt-5">
                <div class="card-body">
                    <form method="post">
                        {% if error %}
                            <div class="alert alert-danger">{{ error }}</div>
                        {% endif %}

                        <h1 class="h3 mb-4 font-weight-normal text-center">Two-Factor Authentication</h1>

                        <p class="text-center mb-4">
                            Please enter the 6-digit verification code from your authenticator app.
                        </p>

                        <div class="mb-3">
                            <label for="verification_code" class="form-label">Verification Code</label>
                            <input type="text" id="verification_code" name="verification_code" class="form-control" required autofocus autocomplete="off" placeholder="Enter the 6-digit code">
                        </div>

                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate_2fa') }}">

                        <div class="d-grid gap-2 mt-4">
                            <button class="btn btn-lg btn-primary" type="submit">
                                Verify
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
