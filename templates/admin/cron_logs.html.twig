{% extends 'base.html.twig' %}

{% block title %}Cron Logs{% endblock %}

{% block stylesheets %}
    <style>
        /* Status badge styling */
        .badge-success {
            background-color: #28a745;
            color: white;
        }

        .badge-danger {
            background-color: #dc3545;
            color: white;
        }

        /* Table styling */
        .table th {
            position: sticky;
            top: 0;
            background-color: #fff;
            z-index: 1;
        }

        .table-responsive {
            max-height: calc(100vh - 240px);
            overflow-y: auto;
        }

        /* Message column styling */
        .message-column {
            max-width: 500px;
            word-wrap: break-word;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row mb-4">
            <div class="col">
                <h1>Cron Logs</h1>
                <p class="text-muted">View logs of automated command executions</p>
            </div>
        </div>

        <div class="row">
            <div class="col">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">
                            <i class="fas fa-history me-2"></i>Command Execution History
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Command</th>
                                        <th>Executed At</th>
                                        <th>Status</th>
                                        <th>Message</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% if cronLogs is empty %}
                                        <tr>
                                            <td colspan="5" class="text-center">No logs found</td>
                                        </tr>
                                    {% else %}
                                        {% for log in cronLogs %}
                                            <tr>
                                                <td>{{ log.id }}</td>
                                                <td>{{ log.command }}</td>
                                                <td>{{ log.executedAt|date('Y-m-d H:i:s') }}</td>
                                                <td>
                                                    {% if log.isSuccess() %}
                                                        <span class="badge badge-success">{{ log.status }}</span>
                                                    {% else %}
                                                        <span class="badge badge-danger">{{ log.status }}</span>
                                                    {% endif %}
                                                </td>
                                                <td class="message-column">{{ log.message }}</td>
                                            </tr>
                                        {% endfor %}
                                    {% endif %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
