{% extends 'base.html.twig' %}

{% block title %}Edit User{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label == 'error' ? 'danger' : label }}">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}

            <!-- User Information Card -->
            <div class="card mb-4">
                <div class="card-header">
                    <h1>Edit User: {{ user.username }}</h1>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}

                    {{ form_row(form.email) }}
                    {{ form_row(form.username) }}

                    <div class="mb-3">
                        {{ form_label(form.roles) }}
                        <div class="form-check-group">
                            {{ form_widget(form.roles) }}
                        </div>
                        <div class="form-text text-danger">
                            {{ form_errors(form.roles) }}
                        </div>
                    </div>

                    <button class="btn btn-primary">{{ button_label|default('Update User') }}</button>
                    <a href="{{ path('app_users') }}" class="btn btn-secondary">Back to list</a>

                    {{ form_end(form) }}
                </div>
            </div>

            <!-- Change Password Card -->
            <div class="card mb-4">
                <div class="card-header">
                    <h2>Change Password</h2>
                </div>
                <div class="card-body">
                    {{ form_start(passwordForm) }}

                    {{ form_row(passwordForm.currentPassword) }}
                    {{ form_row(passwordForm.newPassword.first) }}
                    {{ form_row(passwordForm.newPassword.second) }}

                    <button type="submit" class="btn btn-primary">Change Password</button>

                    {{ form_end(passwordForm) }}
                </div>
            </div>

            <!-- Two-Factor Authentication Card -->
            <div class="card">
                <div class="card-header">
                    <h2>Two-Factor Authentication (2FA)</h2>
                </div>
                <div class="card-body">
                    {% if user.is2faEnabled %}
                        <div class="alert alert-success mb-3">
                            <i class="fas fa-check-circle"></i> Two-factor authentication is currently <strong>enabled</strong> for your account.
                        </div>

                        {{ form_start(twoFactorForm) }}
                        <div class="form-check mb-3">
                            {{ form_widget(twoFactorForm.is_2fa_enabled) }}
                            {{ form_label(twoFactorForm.is_2fa_enabled) }}
                        </div>
                        <button type="submit" class="btn btn-danger">Disable 2FA</button>
                        {{ form_end(twoFactorForm) }}
                    {% else %}
                        <div class="alert alert-warning mb-3">
                            <i class="fas fa-exclamation-triangle"></i> Two-factor authentication is currently <strong>disabled</strong> for your account.
                        </div>

                        <p>Two-factor authentication adds an extra layer of security to your account by requiring a verification code from your mobile device in addition to your password.</p>

                        <a href="{{ path('app_user_setup_2fa', {'id': user.id}) }}" class="btn btn-success">Enable 2FA</a>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
