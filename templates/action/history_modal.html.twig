<div class="modal-content">
    <div class="modal-header">
        <h5 class="modal-title">History for Action ID {{ action.id }}</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>
    <div class="modal-body">
        <div class="alert alert-info mb-3">
            <small><i class="fas fa-info-circle"></i> Fields highlighted in <span class="bg-warning px-2">yellow</span> indicate changes from the previous entry.</small>
        </div>
        {% if histories|length > 0 %}
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Action</th>
                        <th>Action Date</th>
                        <th>Owner</th>
                        <th>Contact</th>
                        <th>Status</th>
                        <th>Updated by</th>
                        <th>Update date</th>
                    </tr>
                </thead>
                <tbody>
                    {% for history in histories %}
                        <tr>
                            <td {% if 'title' in history.changedFields %}class="bg-warning"{% endif %}>{{ history.title }}</td>
                            <td {% if 'actionDate' in history.changedFields %}class="bg-warning"{% endif %}>{{ history.actionDate }}</td>
                            <td {% if 'owner' in history.changedFields %}class="bg-warning"{% endif %}>{{ history.owner }}</td>
                            <td {% if 'contact' in history.changedFields %}class="bg-warning"{% endif %}>{{ history.contact }}</td>
                            <td {% if 'status' in history.changedFields %}class="bg-warning"{% endif %}>{{ history.status }}</td>
                            <td>{{ history.updatedBy }}</td>
                            <td>{{ history.updatedAt }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% else %}
            <p>No history available for this action.</p>
        {% endif %}
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
    </div>
</div>
